{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext", // Or 'es2022', 'esnext', etc.
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "types": ["react-native"]
  },
  "include": [
    "src/**/*.tsx", // Ensure that .tsx files are included
    "src/**/*.ts"
  ]
}
